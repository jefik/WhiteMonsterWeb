<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head", { title: "FaQ", css: "/css/faq.css" }) %>
  </head>
  <body>
    <%- include("partials/header") %>
    <div id="loader">
      <img src="/images/monsterlogo.svg" alt="Monster Logo" />
    </div>
    <div class="main" id="Start">
      <div class="banner">
        <div class="container">
          <div class="row">
            <h1>Frequently asked questions</h1>

            <div class="col-md-4">
              <div class="list-group" id="faqTopics" role="tablist">
                <% const faqsCategories = [...new Set(faqs.map(f => f.category))]; faqsCategories.forEach((faq, index)=>
                { %>
                <a
                  class="list-group-item list-group-item-action <%= index === 0 ? 'active' : '' %>"
                  id="<%= faq.replace(/\s+/g, '-') %>-tab"
                  data-bs-toggle="list"
                  href="#<%= faq.replace(/\s+/g, '-') %>"
                  role="tab"
                >
                  <img src="<%= faqs.find(f => f.category === faq).icon_url %>" alt="Category Icon" />
                  <%= faq %>
                </a>
                <% }) %>
              </div>
            </div>

            <div class="col-md-8">
              <div class="tab-content" id="faqContent">
                <% faqsCategories.forEach((faq, faqIndex) => { %>
                <div
                  class="tab-pane fade <%= faqIndex === 0 ? 'show active' : '' %>"
                  id="<%= faq.replace(/\s+/g, '-') %>"
                  role="tabpanel"
                  aria-labelledby="<%= faq.replace(/\s+/g, '-') %>-tab"
                >
                  <div class="accordion" id="accordion-<%= faq.replace(/\s+/g, '-') %>">
                    <% faqs.filter(f => f.category === faq).forEach((item, index) => { %>
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="heading-<%= item.id %>">
                        <button
                          class="accordion-button collapsed"
                          type="button"
                          data-bs-toggle="collapse"
                          data-bs-target="#collapse-<%= item.id %>"
                        >
                          <%= item.question %>
                        </button>
                      </h2>
                      <div
                        id="collapse-<%= item.id %>"
                        class="accordion-collapse collapse"
                        data-bs-parent="#accordion-<%= faq.replace(/\s+/g, '-') %>"
                      >
                        <div class="accordion-body"><p><%= item.answer %></p></div>
                      </div>
                    </div>
                    <% }) %>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/ScrollTrigger.min.js"></script>
    <script src="/js/javascript.js"></script>
    <script src="/js/faq.js"></script>
    <script src="/js/loader.js"></script>
  </body>
</html>
